{
	"name": "dowel-steek-suite",
	"description": "A suite of applications including a desktop environment and 3D editor.",
	"authors": [
		"Your Name"
	],
	"copyright": "Copyright Â© 2024",
	"license": "proprietary",
	"dependencies": {
		"dlangui": "~>0.10.8",
		"bindbc-sdl": "~>1.4.2",
		"vibe-d": "~>0.9.7"
	},
    "copyFiles-windows": [
        "views/res/*"
    ],
    "copyFiles": [
        "views/res/*"
    ],
	"stringImportPaths": [
		"views/res"
	],
	"sourcePaths": ["source"],
	"importPaths": ["source"],

    "configurations": [
        {
            "name": "desktop",
            "targetType": "executable",
            "targetName": "dowel-steek-desktop",
            "mainSourceFile": "source/app.d",
            "subConfigurations": {
                "dlangui": "sdl"
            },
            "versions": [
                "SDL_2014",
                "USE_SDL",
                "USE_FREETYPE",
                "BACKEND_SDL",
                "DESKTOP_APP"
            ],
            "excludedSourceFiles": [
                "source/D.d",
                "source/bridge/*"
            ]
        },
        {
            "name": "bridge_editor",
            "targetType": "executable",
            "targetName": "bridge-editor",
            "mainSourceFile": "source/D.d",
            "dependencies": {
                "dlangui": "~>0.10.8"
            },
            "subConfigurations": {
                "dlangui": "sdl"
            },
            "versions": [
                "SDL_2014",
                "USE_SDL",
                "USE_FREETYPE",
                "BACKEND_SDL",
                "ENABLE_OPENGL",
                "BRIDGE_APP"
            ],
            "excludedSourceFiles": [
                "source/app.d",
                "source/desktop/*",
                "source/taskbar/*",
                "source/terminal/*",
                "source/notes/*",
                "source/visualizer/*"
            ]
        }
    ],
	"subPackages": [
	]
}